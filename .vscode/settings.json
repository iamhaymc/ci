{
    "files.associations": {
        "*.jo": "coffeescript",
        "*.mjo": "coffeescript"
    },
    "files.exclude": {
        "**/README*": false,
        "**/LICENSE*": true,
        "**/.gitignore": true,
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
        "**/.editorconfig": true,
        "**/.prettierignore": true,
        "**/.prettierrc.json": true,
        "**/babel.config.js": true,
        "**/jest.config.js": true,
        "**/tsconfig.json": true,
        "**/obj": true,
        "**/bin": true,
        "**/build": true,
        "**/test": true,
        "**/dist": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        //"editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ]
}